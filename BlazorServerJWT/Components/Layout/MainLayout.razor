@using BlazorServerJWT.Auth
@inherits LayoutComponentBase
@inject CustomAuthenticationStateProvider auth

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
       @*  <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div> *@

        <div class="top-row px-4">
            <AuthorizeView>
                @* Hello @context?.User?.Identity?.Name <button @onclick="Logout" class="btn btn-secondary">Logout</button> *@
                <a href="logout">Hola, @context?.User?.Identity?.Name</a>
                <a href="logout">Logout</a>

            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    public async Task Logout()
    {
        await auth.Logout();
    }
}